<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AreaManageMapper">
	
	<resultMap type="AreaManage" id="areamanageResultMap">
		<id column="AREA_ID" property="AREA_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		T_AREA
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		AREA_CODE,	
		AREA_LEVEL,	
		AREA_ID,
		PARENT_ID,
		NAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{AREA_CODE},	
		#{AREA_LEVEL},	
		#{AREA_ID},
		#{PARENT_ID},
		#{NAME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			AREA_ID = #{AREA_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			AREA_CODE = #{AREA_CODE},
			AREA_LEVEL = #{AREA_LEVEL},
		NAME = #{NAME},
		AREA_ID = AREA_ID
		where 
		AREA_ID = #{AREA_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			AREA_ID = #{AREA_ID}
	</select>
	
	<!-- 通过AREA_CODE获取数据 -->
	<select id="findByAreaCode" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			AREA_CODE = #{AREA_CODE}
			<if test="AREA_ID != null and AREA_ID != ''">
				and AREA_ID = #{AREA_ID}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.AREA_ID!= null and pd.AREA_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.AREA_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件 -->
					AREA_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
		order by AREA_LEVEL asc
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listByParentId" parameterType="String" resultMap="areamanageResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PARENT_ID = #{parentId} order by NAME 
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listByAreaCode" parameterType="String" resultMap="areamanageResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			AREA_CODE = #{areaCode} order by NAME 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		<if test="AREA_LEVEL!= null and AREA_LEVEL != ''"><!-- 检索 -->
			where AREA_LEVEL = #{AREA_LEVEL}
		</if>
	</select>
	
	
	<!-- 351412933 -->
</mapper>